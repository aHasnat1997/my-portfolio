generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model MyInfo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName  String
  email     String   @unique
  password  String
  imageUrl  String
  aboutMe   String
  linkedin  String
  github    String
  whatsapp  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Projects {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  summary            String
  aboutProject       String
  imageUrl           String
  liveLink           String?  @default("")
  githubLinkFoClient String?  @default("")
  githubLinkFoServer String?  @default("")
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Blogs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  summary   String
  content   String
  imageUrl  String   @default("")
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
